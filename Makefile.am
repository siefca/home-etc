SUBDIRS=sh src skel patchwork doc
EXTRA_DIST=FILES TODO COPYING AUTHORS CONTRIBUTORS README home-etc.spec

CONTRIBUTORS:
	sh ./congen

rpm:
	$(MAKE) dist
	rpmbuild -ta --clean $(PACKAGE)-$(VERSION).tar.gz

publish:
	$(MAKE) clean
	$(MAKE) dist
	scp $(PACKAGE)-$(VERSION).tar.gz siefca@ep09.pld.kernel.pl:~/ftp-pld/distfiles
	ssh siefca@ep09.pld.kernel.pl 'chmod a+r ~/ftp-pld/distfiles/*'
	cd ../SPECS && cvs up $(PACKAGE).spec
	cp -f ../SPECS/$(PACKAGE).spec ../SPECS/$(PACKAGE).spec.bak
	cp -f ./$(PACKAGE).spec ../SPECS/$(PACKAGE).spec
	rm -f ../SOURCES/$(PACKAGE)-$(VERSION).tar.gz
	cd ../SPECS && ./builder -5 $(PACKAGE).spec
	cd ../SPECS && cvs ci -m "- new release (autogenerated from publish target)" $(PACKAGE).spec

clean-local:
	rm -f CONTRIBUTORS

